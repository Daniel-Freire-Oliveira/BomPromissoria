<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Atualizar Promissoria</title>
    <!-- Bootstrap CSS -->
    <link href="/bootstrap.min.css" rel="stylesheet">
    <style>
        .modal-header {
            background-color: #007bff;
            color: white;
        }
        .modal-footer .btn-success {
            background-color: green;
        }
        .profile-picture {
            width: 100px;
            height: 100px;
            border-radius: 50%;
            background-color: #f0f0f0;
            display: flex;
            justify-content: center;
            align-items: center;
            font-size: 24px;
            color: #007bff;
            margin-bottom: 15px;
        }
        .cmp{
            width: 100px;
        }
        div#headerfirst {
            margin-bottom: 40px;
        }
        body {
            background-color: #f8f9fa; /* Cor de fundo branco */
        }
        .form-group {
            margin-bottom: 20px; /* Espaçamento entre os inputs */
        }
    </style>
</head>
<body>
    <div class="container d-flex justify-content-center">
        <div class="modal-content">
            <div class="modal-header" id="header-first">
                <h5 class="modal-title modal-center">Atualizando cliente</h5>
            </div>
            <div class="modal-body text-center">
                <h5><%= obj.nome%></h5>
                <p>Emissão: <%= obj.emissao%></p>
                <p>Vencimento: <%= obj.vencimento%></p>
                <ul class="nav nav-tabs justify-content-center" id="myTab" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link active" id="informacoes-tab" data-toggle="tab" href="#informacoes" role="tab" aria-controls="informacoes" aria-selected="true">Informações</a>
                    </li>
                </ul>
                <div class="container mt-3">
                    <div class="tab-content" id="myTabContent">
                        <div class="tab-pane fade show active" id="informacoes" role="tabpanel" aria-labelledby="informacoes-tab">
                            <form method="post" action="/updt/<%= id%>">
                                <div class="form-group row">
                                    <label for="nomeCompleto" class="col-sm-3 col-form-label text-right" >Nome Completo *</label>
                                    <div class="col-sm-8">
                                        <input type="text" class="form-control" id="nomeCompleto" value="<%= obj.nome%>" name="nm">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="endereco" class="col-sm-3 col-form-label text-right">Endereço</label>
                                    <div class="col-sm-8">
                                        <input type="text" class="form-control" id="endereco" value="<%= obj.endereco%>" name="end">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="bairro" class="col-sm-3 col-form-label text-right">Bairro</label>
                                    <div class="col-sm-8">
                                        <input type="text" class="form-control" id="bairro" value="<%= obj.bairro%>" name="bair">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="cpf" class="col-sm-3 bg-danger col-form-label text-right">CPF - não pode mais alterar</label>
                                    <div class="col-sm-8">
                                        <input type="text" class="form-control" id="cpf" value="<%= obj.cpf%>" name="cpf">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="apelido" class="col-sm-3 col-form-label text-right">Apelido</label>
                                    <div class="col-sm-8">
                                        <input type="text" class="form-control" id="apelido" value="<%= obj.apelido%>" name="apel">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="emissao" class="col-sm-3 col-form-label text-right">Emissão</label>
                                    <div class="col-sm-8">
                                        <input type="date" class="form-control" id="emissao" value="<%= obj.emissao%>" name="emiss">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="descricao" class="col-sm-3 col-form-label text-right">Descrição</label>
                                    <div class="col-sm-8">
                                        <input type="text" class="form-control" id="descricao" value="<%= obj.descricao%>" name="desc">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="valor" class="col-sm-3 col-form-label text-right">Valor</label>
                                    <div class="col-sm-8">
                                        <input type="text" class="form-control" id="valor" value="<%= obj.valor%>" name="val">
                                    </div>
                                </div>
                                <!-- Adicionando o checkbox -->
                                <div class="form-group row">
                                    <label for="checkboxPago" class="col-sm-3 col-form-label text-right">Pago</label>
                                    <div class="col-sm-8">
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" id="checkboxPago" name="pago">
                                            <label class="form-check-label" for="checkboxPago">Sim</label>
                                        </div>
                                    </div>
                                </div>
                                <!-- Botões de envio e voltar -->
                                <div class="form-group row">
                                    <div class="col-sm-3"></div>
                                    <div class="col-sm-8">
                                        <button type="submit"  id="salvar" class="btn btn-success">Salvar</button>
                                        <a href="/" class="btn btn-secondary">Voltar</a>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
<script>
    var checkboxPago = document.getElementById("checkboxPago")
    var salvar = document.getElementById('salvar')
    salvar.addEventListener('click',(err)=>{
        if(!checkboxPago.checked){
            checkboxPago.value = false;
        }else{checkboxPago.value = true}
    })
</script>
</body>
</html>
